<div class="edit-user-main">
  <%= form_with(model: post, local: true, url:choose_new_or_edit) do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :image %>
      <p id="edit-image"><%= image_tag(@post.image.url) if @post.image && @post.image.url %></p>
      <%= form.file_field :image %>
      <%= form.hidden_field :image_cache %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <p id="post-content"><%= form.text_area :content %></p>
    </div>

    <div class="actions">
      <%= form.submit value="投稿する" %>
    </div>
  <% end %>

</div>
